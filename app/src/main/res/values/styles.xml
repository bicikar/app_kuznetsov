<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.FirstApplication.Button.Orange" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/main_orange</item>
    </style>

    <style name="Widget.FirstApplication.Button.Green" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/main_green</item>
    </style>

    <style name="Widget.FirstApplication.Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/main_blue</item>
    </style>

    <style name="Widget.FirstApplication.ImageButton.Back" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/main_blue</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="Widget.FirstApplication.LinkButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/main_blue</item>
    </style>
</resources>